<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="todo_list_list_view" model="ir.ui.view">
		<field name="name">todo.list.list.view</field>
		<field name="model">todo.list</field>
		<field name="arch" type="xml">
			<list string="To-Do List">
				<field name="name"/>
				<field name="is_done"/>
				<field name="color" widget="color"/>
			</list>
		</field>
	</record>

	<record id="todo_list_form_view" model="ir.ui.view">
		<field name="name">todo.list.form.view</field>
		<field name="model">todo.list</field>
		<field name="arch" type="xml">
			<form string="To-Do List">
				<sheet>
					<group>
						<field name="name"/>
						<field name="is_done"/>
						<field name="color" widget="color"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="action_todo_list" model="ir.actions.act_window">
        <field name="name">To-Do List</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">todo.list</field>
        <field name="view_mode">list,form</field>
    </record>

	<menuitem id="menu_todo_list" name="To-Do List" action="action_todo_list"/>
	
</odoo>